<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".RequesterLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/title_seller"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Requester Login"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textSize="30dp"
                android:textStyle="normal"
                android:background="@color/new01"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/welcome_img1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/title_seller"
                android:src="@drawable/alogo1"
                android:layout_marginTop="10dp"/>


            <EditText
                android:id="@+id/seller_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your E-mail.."
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/welcome_img1"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="15dp"
                />

            <EditText
                android:id="@+id/seller_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/seller_login_email"
                android:inputType="textPassword"
                android:layout_marginTop="5dp"
                android:background="@drawable/inputs2"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="15dp"
                />


            <Button
                android:id="@+id/seller_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_login_password"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Login"
                android:background="@drawable/button2"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/normal_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_login_btn"
                android:text="Before you login, you have to agree with our terms and conditions"
                android:textColor="@color/new05"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/normal_txt01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/normal_txt"
                android:text="Terms and Conditions"
                android:textColor="@color/new05"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>