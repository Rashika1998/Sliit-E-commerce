<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="4dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1">


            <TextView
                android:id="@+id/requester_product_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request's Status"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/new01"
                />

        <TextView
            android:id="@+id/requester_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requester_product_status"
            android:text="Username"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/new01"
            />


            <TextView
                android:id="@+id/requester_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requester_user_name"
                android:text="Address"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/new01"
                />

            <TextView
                android:id="@+id/requester_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requester_address"
                android:text="phone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/new01"
                />



        <TextView
            android:id="@+id/requester_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requester_phone"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/new01"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/requester_product_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/requester_product_name"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />

        <TextView
            android:id="@+id/requester_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/requester_product_image"
            android:text="Product Price"
            android:textSize="18dp"
            android:textColor="@color/new01"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/requester_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/requester_product_price"
            android:text="Product Description"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:textColor="@color/new01"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            />

    </RelativeLayout>

</RelativeLayout>