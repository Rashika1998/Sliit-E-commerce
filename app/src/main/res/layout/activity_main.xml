<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:id="@+id/app_start_welcome"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Welcome...!"
        android:textStyle="bold|italic"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_start_welcome"
        android:layout_marginTop="1dp"
        android:text="Find what you love to buy..."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="italic|normal"
        />

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/app_slogan"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Join Now"
        android:textColor="@color/colorPrimaryDark"
        />


    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button2"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Already have an Account? Login"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/main_join_now_btn"
        android:layout_marginTop="5dp"
        />


    <TextView
        android:id="@+id/seller_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Need Bo Be A Request?"
        android:layout_below="@+id/main_login_btn"
        android:textSize="20sp"
        android:textAlignment="textEnd"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:layout_marginTop="5dp"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>