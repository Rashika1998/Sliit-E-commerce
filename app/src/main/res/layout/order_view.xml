<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/image_icon"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="172dp"
            android:src="@drawable/add_post" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderNameLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/image_icon"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Item Name"
            android:layout_marginTop="10sp"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemInfoLayout"
        android:layout_below="@+id/orderNameLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Item Price"
            android:layout_marginRight="20sp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Item Quantity"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/itemInfoLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:background="@drawable/inputs2"/>
    </LinearLayout>

</RelativeLayout>